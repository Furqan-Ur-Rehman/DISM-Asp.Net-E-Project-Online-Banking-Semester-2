@model EBankingProject.Models.AccountType
@{
    ViewBag.Title = "AddAccountType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    @using (Html.BeginForm("AddAccountType", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <h4 class="mt-4">Add Account Type</h4>
        <hr />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.TypeOfAccount, htmlAttributes: new { @class = "control-label col-md-2 mt-3" })
                    <div class="">
                        @Html.EditorFor(model => model.TypeOfAccount, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.TypeOfAccount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-lg-12 col-md-12">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </div>
    }

</div>