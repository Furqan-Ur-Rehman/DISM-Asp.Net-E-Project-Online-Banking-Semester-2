@model EBankingProject.Models.Account
@{
    ViewBag.Title = "EditAccount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditAccount</h2>

@if (TempData["EditMessage"] != null)
{
    <h6 class="alert-primary p-2">@TempData["EditMessage"]</h6>
}

<div class="container-fluid my-5">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 ">
            @*<div>@Html.LabelFor(model => model.AccountNO)</div>*@
            <div class="form-group">
                
                <h4>Customer Name: <span style="margin-left:20px">@Model.Customer.firstName</span></h4>

            </div>

        </div>

    </div>
 </div>
    <div class="container-fluid my-5">

        @using (Html.BeginForm("EditAccount", "Admin", FormMethod.Post))
        {

            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 ">
                    <div class="form-group">
                        <label class="control-label col-md-6 mt-3">Select Customer Email</label>
                        <div class="">

                            @Html.DropDownListFor(model => model.CustomerId, ViewBag.CustList as SelectList, "--- Select Customer ---", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                        </div>

                    </div>

                </div>

                <div class="col-lg-4 col-md-4 col-sm-12 ">
                    <div class="form-group">
                        <label class="control-label col-md-4 mt-3">Account No.</label>
                        <div class="">

                            @Html.TextBoxFor(model => model.AccountNO, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AccountNO, "", new { @class = "text-danger" })
                        </div>

                    </div>

                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 ">
                    <div class="form-group">
                        <label class="control-label col-md-6 mt-3">Select Account Type</label>
                        <div class="">
                            @Html.DropDownListFor(model => model.AccountType, ViewBag.AccList as SelectList, "--- Select Branch ---", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AccountType, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 ">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                        <div class="">
                            @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AccountDate, htmlAttributes: new { @class = "control-label col-md-2  mt-3" })
                        <div class="">
                            @Html.EditorFor(model => model.AccountDate, new { htmlAttributes = new { @class = "form-control", Type="date" } })
                            @Html.ValidationMessageFor(model => model.AccountDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
















            <div class="form-group mt-3">
                <div class="col-lg-12 col-md-12">
                    <input type="submit" value="Edit Account" class="btn btn-primary form-control" />
                </div>
            </div>


        }

    </div>
