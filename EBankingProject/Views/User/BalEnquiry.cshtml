@model EBankingProject.Models.BalanceEnquiry
@{
    ViewBag.Title = "BalEnquiry";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3 class="mt-2">Balance Enquiry</h3>

<div class="container-fluid my-5">

    @using (Html.BeginForm("BalEnquiry", "User", FormMethod.Post))
    {

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 ">
                <div class="form-group">
                    <label class="control-label col-md-6 mt-3">Account No.</label>
                    <div class="">

                        @Html.TextBoxFor(model => model.AccountNo, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>

            <div class="col-lg-6 col-md-6 col-sm-12 ">
                <div class="form-group">
                    <label class="control-label col-md-4 mt-3">CurrentBalance</label>
                    <div class="">

                        @Html.TextBoxFor(Model => Model.Account.Balance, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.Account.Balance, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>
            

        </div>


        <div class="form-group mt-3">
            <div class="col-lg-12 col-md-12">
                <input type="submit" value="Submit Request" class="btn btn-primary form-control" />
            </div>
        </div>


    }

</div>