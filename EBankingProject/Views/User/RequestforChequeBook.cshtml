@model EBankingProject.Models.RequestofChequeBook
@{
    ViewBag.Title = "RequestforChequeBook";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3 class="mt-3">Request for ChequeBook</h3>

<div class="container-fluid my-5">

    @using (Html.BeginForm("RequestforChequeBook", "User", FormMethod.Post))
    {
        if (Session["ReqforChequebook"] != null)
        {
            <h6 class="alert-primary p-2">@Session["ReqforChequebook"]</h6>
        }


        @*<h4>Account No: <span style="margin-left:20px">@Model.Account.AccountNO</span></h4>*@

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 ">
                <div class="form-group">
                    <label class="control-label col-md-6 mt-3">Account No.</label>
                    <div class="">

                        @Html.TextBoxFor(model => model.AccountNo, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>

            <div class="col-lg-6 col-md-6 col-sm-12 ">
                <div class="form-group">
                    <label class="control-label col-md-4 mt-3">Leaves of Cheques</label>
                    <div class="">

                        @Html.TextBoxFor(model => model.LeavesofCheque, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LeavesofCheque, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>



        </div>


        <div class="form-group mt-3">
            <div class="col-lg-12 col-md-12">
                <input type="submit" value="Submit Request" class="btn btn-primary form-control" />
            </div>
        </div>


    }

</div>

